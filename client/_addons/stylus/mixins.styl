button-theme-mixin($color, $fill = true)
	$lightness = lightness($color)
	
	if $fill
		background-color $color
		border-color transparent
		
		if $lightness <= 65%
			color $white
		else
			color $dark
	else
		color $color
		background none
		border-color $color
		
	
	&:hover
	&:focus
		if $fill
			background-color lighten($color, 15%)
		else
			box-shadow 0 0 10px 2px rgba($color, .5)
			
			
	&:active
		if $fill
			background-color darken($color, 15%)
		else
			box-shadow none
			
			
	&:disabled
		if $fill
			background-color $color
		else
			box-shadow none