button-theme-mixin($color, $fill = true)
    $lightness = lightness($color)
    
    if $fill
        background-color $color
        border-color transparent
        
        if $lightness <= 65%
            color $white
        else
            color $dark
    else
        color $color
        background none
        border-color $color
        
    
    &:hover
    &:focus
        if $fill
            background-color lighten($color, 15%)
        else
            box-shadow 0 0 10px 2px rgba($color, .5)
            
            
    &:active
        if $fill
            background-color darken($color, 15%)
        else
            box-shadow none
            
            
    &:disabled
        if $fill
            background-color $color
        else
            box-shadow none
            


white-block-shadow-mixin()
    background-color $white
    box-shadow 0 1px 2px rgba($black, 0.2)
    


placeholder-mixin($color)
    &::-webkit-input-placeholder
        opacity .7
        color $color !important
    &:-moz-placeholder  /* Firefox 18- */
        opacity .7
        color $color !important
    &::-moz-placeholder  /* Firefox 19+ */
        opacity .7
        color $color !important
    &:-ms-input-placeholder
        opacity .7
        color $color !important