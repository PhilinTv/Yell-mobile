.affiche
    overflow hidden
    clearfix()
    
    
    &__container
        float left
        padding 0 12px

    
    &__items
        display table
        
    
    &__item
        display table-cell
        padding 3px
        
        &-card
            display block
            width 170px
        
        &-image
            display block
            height 150px
            background-color $grey_300
            background-size cover
            
            img
                width 100%
                
        &-body
            padding 15px
            
        &-title
            margin-bottom 15px
            height 90px
            overflow hidden
            position relative
            
            &:after
                content ''
                absolute left right bottom
                height 15px
                background linear-gradient(top, rgba($white,0) 0%, rgba($white,1) 100%)
            
            a
                color inherit
                text-decoration none
            
        &-category
            height 15px
            font-size .8em
            color $grey_500
            text-decoration none