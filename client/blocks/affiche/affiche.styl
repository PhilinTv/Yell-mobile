.affiche
	overflow-x auto
	
	&__items
		display table
	
	&__item
		display table-cell
		padding 3px
		
		&-block
			display block
			width 170px
			height 300px
			white-block-shadow-mixin()
		
		&-image
			display block
			height 150px
			background-color $gray-light
			background-size cover
			
			img
				width 100%
				
		&-body
			padding 15px
			
		&-title
			margin-bottom 15px
			height 90px
			overflow hidden
			
			a
				color inherit
				text-decoration none
			
		&-category
			height 15px
			font-size 12px
			color $gray
			text-decoration none