.button
    display inline-block
    font-family inherit
    font-weight 500
    line-height 1
    text-decoration none
    text-transform uppercase
    text-align center
    white-space nowrap
    cursor pointer
    border-radius 2px
    box-sizing border-box
    transition .1s


    &:hover
    &:focus
    &:active
        text-decoration none
        outline none


    &:disabled
        cursor default
        opacity .4
            

    &_size
        &_m
            height 40px
            padding 9px 20px 13px
            font-size 16px

            .button__icon
                width 20px
                height 20px
                
        &_l
            height 44px
            padding 11px 20px 15px
            font-size 16px

            .button__icon
                width 20px
                height 20px
            
        &_xl
            height 50px
            padding 14px 20px 18px
            font-size 16px

            .button__icon
                width 20px
                height 20px


    &_width_full
        width 100%
        

    &_shadow_yes
        mixin-material-shadow(2)


    &_theme
        &_red
            mixin-button-theme($red_400)
            
        &_green
            mixin-button-theme($green_500)
            
        &_blue
            mixin-button-theme($blue_500)
            
        &_grey
            mixin-button-theme($grey_700)


    &__text
        display inline-block
        vertical-align middle


    &__icon
        display inline-block
        vertical-align middle