.button
    display inline-block
    font-family $font-family
    line-height 1
    text-decoration none
    text-align center
    white-space nowrap
    cursor pointer
    border-radius 2px
    box-sizing border-box
    transition .1s


    &:hover
    &:focus
    &:active
        text-decoration none
        outline none


    &:disabled
        cursor default
        opacity .4
            

    &_size
        &_m
            height 40px
            padding 8px 10px
            font-size 16px

            .button__icon
                width 20px
                height 20px
                
        &_l
            height 44px
            padding 11px 15px
            font-size 16px

            .button__icon
                width 20px
                height 20px
            
        &_xl
            height 50px
            padding 14px 20px
            font-size 16px
            text-transform uppercase

            .button__icon
                width 20px
                height 20px


    &_width_full
        width 100%
        

    &_shadow_yes
        box-shadow 0 2px 2px rgba($black, .2)


    &_theme
        &_red
            mixin-button-theme($red_400)
            
        &_green
            mixin-button-theme($green_500)
            
        &_blue
            mixin-button-theme($blue_500)
            
        &_grey
            mixin-button-theme($grey_700)


    &__text
        display inline-block
        vertical-align middle


    &__icon
        display inline-block
        vertical-align middle