.card
    background-color $white
    mixin-material-shadow(1)
    
    &__image
        display block
        background-color $grey_300
        background-size cover
        overflow hidden

        img
            width 100%
            
            
    &__content
        padding 16px
        
        
    &__title
        margin 0 0 16px
        font-weight normal
            
        a
            color inherit
            text-decoration none
        
        
    &__title,
    &__text
        overflow hidden
        position relative

        &:after
            content ''
            absolute left right bottom
            height 16px
            background linear-gradient(top, rgba($white,0) 0%, rgba($white,1) 100%)
        
        
        
    &__caption
        color $grey_500
        text-decoration none