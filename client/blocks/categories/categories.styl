.categories
        
    
    &__item
        float left
        
        .card
            display block
            padding 40px 10px 10px
            margin 3px
            width 120px
            color inherit
            text-align center
            text-decoration none
        
        &-icon
            display inline-block
            vertical-align top
            margin-bottom 20px
            width 50px
            height 50px
            
            .icon
                stroke $red_400
                
        &-name
            display block
            height 30px
            line-height 1.2