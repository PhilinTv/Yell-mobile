.categories
    
    &__items
        display table
        
    
    &__item
        display table-cell
        padding 2px
        
        &-block
            display block
            padding 40px 10px 10px
            width 120px
            height 100px
            color inherit
            text-align center
            text-decoration none
            white-block-shadow-mixin()
        
        &-icon
            display inline-block
            vertical-align top
            margin-bottom 20px
            width 50px
            height 50px
                
        &-name
            display block
            height 30px
            line-height 1.2