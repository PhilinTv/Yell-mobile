.categories
	overflow-x auto
	clearfix()
	
	&__items
		display table
	
	&__item
		display table-cell
		padding 2px
		
		&-block
			display block
			padding 40px 5px 0
			width 120px
			height 110px
			color inherit
			text-align center
			text-decoration none
			background-color $white
			box-shadow 0 1px 2px rgba($black, 0.2)
		
		&-icon
			display inline-block
			vertical-align top
			margin-bottom 25px
			width 46px
			height 46px
			
			.icon
				width 100%
				height 100%
				
		&-name
			display block
			line-height 1.2