.events
	white-block-shadow-mixin()
	
	&__filter
		height 49px
		border-bottom 1px solid #d8d8d8
		
		&-item
			float left
			padding 16px 0 10px
			width 33.33%
			height 20px
			vertical-align middle
			text-transform uppercase
			text-align center
			border-bottom 4px solid transparent
			cursor pointer
			
			&_active
				border-bottom-color $red
			
	
	&__item
		padding 15px
		border-top 1px solid #d8d8d8
		clearfix()
		
		&:first-child
			border none
		
		&-image
			float right
			display block
			width 70px
			height 70px
			margin-left 10px
			background-color $gray-light
			background-size cover
			
		&-title
			margin-bottom 15px
			height 40px
			overflow hidden
			
			a
				color inherit
				text-decoration none
			
		&-date
			height 15px
			font-size 12px
			color $gray
			
	&__more
		padding 15px
		text-align center
		border-top 1px solid #d8d8d8
		
		.button
			width 200px
			border-radius 20px