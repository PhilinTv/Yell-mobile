.events     
    
    &__item
        padding 15px
        border-top 1px solid $grey_300
        clearfix()
        
        &:first-child
            border none
        
        &-image
            float right
            display block
            width 70px
            height 70px
            margin-left 10px
            background-color $grey_300
            background-size cover
            
        &-title
            margin-bottom 15px
            height 40px
            overflow hidden
            position relative
            
            &:after
                content ''
                absolute left right bottom
                height 15px
                background linear-gradient(top, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 100%)
            
            a
                color inherit
                text-decoration none
            
        &-date
            color $grey_500