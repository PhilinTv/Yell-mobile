.events     
    
    &__item
        &-image
            float right
            display block
            width 70px
            height 70px
            margin-left 10px
            background-color $grey_300
            background-size cover
            
        &-title
            margin-bottom 16px
            height 40px
            overflow hidden
            position relative
            
            &:after
                content ''
                absolute left right bottom
                height 16px
                background linear-gradient(top, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 100%)
            
            a
                color inherit
                text-decoration none
            
        &-date
            color $grey_500
            
            
    &__more
        padding 16px 0
        text-align center
        border-top 1px solid $grey_300
        
        .button
            border-radius 20px