.events
    
    &__filter
        height 49px
        border-bottom 1px solid $grey_300
        
        &-item
            float left
            padding 16px 0 10px
            width 33.33%
            height 20px
            vertical-align middle
            text-transform uppercase
            text-align center
            border-bottom 4px solid transparent
            cursor pointer
            
            &_active
                border-bottom-color $red_400
            
    
    &__item
        padding 15px
        border-top 1px solid $grey_300
        clearfix()
        
        &:first-child
            border none
        
        &-image
            float right
            display block
            width 70px
            height 70px
            margin-left 10px
            background-color $grey_300
            background-size cover
            
        &-title
            margin-bottom 15px
            height 40px
            overflow hidden
            position relative
            
            &:after
                content ''
                absolute left right bottom
                height 15px
                background linear-gradient(top, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 100%)
            
            a
                color inherit
                text-decoration none
            
        &-date
            height 15px
            font-size .8em
            color $grey_500
            
    &__more
        padding 15px
        text-align center
        border-top 1px solid $grey_300
        
        .button
            width 200px
            border-radius 20px