.fab
    position relative
    width 50px
    height 50px
    
    &:before
        content ''
        fixed left top right bottom
        opacity 0
        visibility hidden
        background-color rgba($black, .8)
        transition opacity .3s
    
    
    .button
        absolute left top
        visibility hidden
        
        for $i in 1..5
            &:nth-child({$i})
                z-index (6 - $i)
        
        &.is-visible
            visibility visible
            opacity 1
            mixin-material-shadow(2)
            
        &_icon_plus
             padding 17px
             
             &.is-close .icon
                transform-origin 50% 50%
                transform rotate3d(0, 0, 1, 135deg)
                
            
        &__label
            absolute top 50% right 100%
            height 14px
            margin -13px 16px 0 0
            padding 6px 15px
            font-size .8em
            line-height 1.2
            color $grey_700
            text-transform none
            white-space nowrap
            opacity 0
            background-color $white
            border-radius 15px
            mixin-material-shadow(2)
            
        
        .icon
            fill currentColor
            transition .3s
            
            
    &.is-opened:before
        opacity 1
        visibility visible


    &.is-opened
        for $i in 1..5
            .button:nth-child({$i})
                top (($i - 1) * 66)px

        
    &.is-opened .button__label
        opacity 1
        transition opacity .3s .3s