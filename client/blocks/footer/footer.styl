.footer
    background-color #2f2f30
    overflow hidden
    color $grey_300
    

    &__container
        float left
        padding 30px 15px
        
    
    &__collumns
        display table
        
        
    &__collumn
        display table-cell
        padding-left 30px
        
        &:first-child
            padding 0
       

    &__nav
        width 160px
        padding 0
        margin 0
        list-style none
        color $grey_700
        
        &-item
            margin-bottom 15px
            
            &-icon
                display inline-block
                vertical-align middle
                width 24px
                height 24px
                margin-right 10px
                
            .icon
                fill currentColor
            
            a
                color inherit
                text-decoration none