.footer
	padding 40px 15px
	background-color #2f2f30
	
	&__bar
		overflow-x auto
	
	&__collumns
		display table
		
	&__collumn
		display table-cell
		vertical-align top
		width 220px
		padding-right 30px
		
		&-title
			margin-bottom 15px
			font-size 18px
			white-space nowrap
			color $gray-light
			
		&-nav
			padding 0
			margin 0
			list-style none
			color $dark
			
			&-item
				margin-bottom 15px
				white-space nowrap
				
				a
					color inherit
					text-decoration none