.guides
	overflow-x auto
	
	&__items
		display table
	
	&__item
		display table-cell
		padding 3px
		
		&-block
			display block
			width 290px
			height 370px
			white-block-shadow-mixin()
		
		&-image
			display block
			height 150px
			background-color $gray-light
			background-size cover
			
			img
				width 100%
				
		&-body
			padding 15px
			
		&-title
			margin-bottom 15px
			height 50px
			font-size 18px
			overflow hidden
			
			a
				color inherit
				text-decoration none
				
		&-text
			margin 15px 0
			height 90px
			overflow hidden
			
		&-date
			height 15px
			font-size 12px
			color $gray