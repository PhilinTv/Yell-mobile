.guides
    
    &__items
        display table
        
    
    &__item
        display table-cell
        padding 3px
        
        &-block
            display block
            width 290px
            height 370px
            white-block-shadow-mixin()
        
        &-image
            display block
            height 150px
            background-color $gray-light
            background-size cover
            
            img
                width 100%
                
        &-body
            padding 15px
            
        &-title
            margin 0 0 15px
            height 50px
            overflow hidden
            
            a
                color inherit
                text-decoration none
                
        &-text
            margin 15px 0
            height 90px
            overflow hidden
            position relative
            
            &:after
                content ''
                absolute left right bottom
                height 15px
                background linear-gradient(top, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 100%)
            
        &-date
            height 15px
            font-size .8em
            color $gray