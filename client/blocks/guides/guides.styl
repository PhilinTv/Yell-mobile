.guides
    
    &__items
        display table
        
    
    &__item
        display table-cell
        padding 3px
        
        &-card
            display block
            width 290px
        
        &-image
            display block
            height 150px
            background-color $grey_300
            background-size cover
            
            img
                width 100%
                
        &-body
            padding 15px
            
        &-title
            margin 0 0 15px
            height 50px
            overflow hidden
            
            a
                color inherit
                text-decoration none
                
        &-text
            margin 15px 0
            height 90px
            overflow hidden
            position relative
            
            &:after
                content ''
                absolute left right bottom
                height 15px
                background linear-gradient(top, rgba($white,0) 0%, rgba($white,1) 100%)
            
        &-date
            color $grey_500