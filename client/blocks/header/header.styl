.header
    height 60px
    position relative
    z-index 3
    
    &.is-fixed &__panel,
    &.is-fixed .fab
        position fixed
    
    
    &__panel
        absolute left 0 top 0 right 0
        height 40px
        padding 10px 0
        background-color $red_400
        mixin-material-shadow(2)
            
            
    &__menu-switcher
        absolute left 10px top 50%
        margin-top -10px
        padding 5px
        width 18px
        height 12px
        cursor pointer
        
        
    &__icon-burger
        relative top 50%
        float left
        margin-top -1px
        width 100%
        height 2px
        background-color $white
        transition .3s
        
        &:before, &:after
            content ''
            position absolute
            left 0
            width 100%
            height 100%
            background-color $white
            transition .3s
            
        &:before
            top -5px

        &:after
            top 5px
            
        &.is-close
            background-color transparent
            
            &:before, &:after
                transform-origin 50% 50%
                top 0
            
            &:before
                transform rotate3d(0, 0, 1, -45deg)
                
            &:after
                transform rotate3d(0, 0, 1, 45deg)
                
                
    &__sidebar
        fixed left -100% top bottom
        width 100%
        height 100%
        padding-top 60px
        overflow auto
        box-sizing border-box
        transition .3s
        
        &.is-visible
            left 0
    
    
    .logo
        display block
        margin 0 auto
                    

    .fab
        absolute top 32px right 15px