.header
    height 60px
    position relative
    color $white
    
    &_fixed &__bar_horizontal
        fixed left 0 top 0 right 0
        z-index 100
    
    
    &__bar
        &_horizontal
            height 40px
            padding 10px 0
            text-align center
            position relative
            background-color $red
            box-shadow 0 2px 0 darken($red, 40%)
            
            
            
    &__icon-menu
        absolute left 10px top 50%
        margin-top -10px
        padding 5px
        width 18px
        height 12px
        cursor pointer
        
        
        &-lines
            relative top 50%
            float left
            margin-top -1px
            width 100%
            height 2px
            background-color $white
            transition .3s
            
            &:before, &:after
                content ''
                position absolute
                left 0
                width 100%
                height 100%
                background-color $white
                transition .3s
                
            &:before
                top -5px

            &:after
                top 5px
                
            &_close
                background-color transparent
                
                &:before, &:after
                    transform-origin 50% 50%
                    top 0
                
                &:before
                    transform rotate3d(0, 0, 1, -45deg)
                    
                &:after
                    transform rotate3d(0, 0, 1, 45deg)
                    

    &__icon-add
        display inline-block
        width 100%
        height 100%
        position relative
        transform-origin 50% 50%
        transition .3s
        
        &:before, &:after
            content ''
            position absolute
            background-color $white
        
        &:before
            left 50%
            top 0
            margin-left -1px
            width 2px
            height 100%
            
        &:after
            left 0
            top 50%
            margin-top -1px
            width 100%
            height 2px
            
        &_close
            transform rotate3d(0, 0, 1, -135deg)
            
                    

    &__action
        absolute top 30px right 15px
        
        &_opened &-button
            visibility visible
            box-shadow 0 8px 8px rgba($black, .2)
        
        &_opened &-button_pink
            top 65px
            
        &_opened &-button_green
            top 130px
            
        &_opened &-button_blue
            top 195px
        
        &-button
            absolute right top
            width 24px
            height 24px
            padding 13px
            color $white
            text-decoration none
            text-align center
            cursor pointer
            border-radius 50%
            transition .3s
            
            &_red
                width 16px
                height 16px
                padding 17px
                background-color $red
                box-shadow 0 8px 8px rgba($black, .2)
                
            &_pink
                visibility hidden
                background-color $pink
                
            &_green
                visibility hidden
                background-color $green
                
            &_blue
                visibility hidden
                background-color $blue
            
            .icon
                fill currentColor