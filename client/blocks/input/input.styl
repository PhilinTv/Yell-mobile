.input
    display inline-block
    position relative
    color $grey_700
    
    
    &__control
        width 100%
        font-family inherit
        color inherit
        background $white
        resize none
        border none
        border-radius 2px
        box-sizing border-box
        
        mixin-placeholder(inherit)

        &:focus
            outline none
            
            
    &__icon
        position absolute
        top 0
        height 100%
        
        &_position
            &_left
                left 0
                
            &_right
                right 0
                
        .icon
            absolute left 25% top 25%
            width 50%
            height 50%
            fill currentColor
            
            
    &__dropdown
        absolute left 0 top 100% right 0
        z-index 2
        mixin-material-shadow(2)


    &_size
        &_l
            input
                height 44px
                padding 13px
                font-size 16px

            textarea
                height 150px
                padding 13px
                font-sze 16px

            select
                height 44px
                padding 13px 0 13px 13px

            option
                padding 13px
                
            &.input_indent_left .input__control
                padding-left 44px
                
            .input__icon
                width 44px
                
        &_xl
            input
                height 50px
                padding 15px
                font-size 16px

            textarea
                height 180px
                padding 15px
                font-sze 16px

            select
                height 50px
                padding 15px 0 15px 15px

            option
                padding 15px
                
            &.input_indent_left .input__control
                padding-left 50px
                
            .input__icon
                width 50px
                

    &_width_full
        display block
        

    &_shadow_yes
        mixin-material-shadow(2)
                

    &_theme_cobalt &__control,
    &_theme_cobalt &__icon
        color $cobalt