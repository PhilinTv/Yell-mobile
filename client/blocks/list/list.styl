.list     
    
    &__item
        padding 16px
        border-top 1px solid $grey_300
        clearfix()
        
        &:first-child
            border none
        
        &-image
            float left
            display block
            width 50px
            height 50px
            background-color $grey_300
            background-size cover
            border-radius 50%
            
        &-content
            margin-left 60px