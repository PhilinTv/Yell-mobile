.reviews        
    
    &__item
        padding 15px
        margin-bottom 6px
        
        &-company
            margin-bottom 15px
            clearfix()
        
            &-image
                float left
                display block
                width 50px
                height 50px
                background-color $grey_300
                background-size cover
                
            &-data
                margin-left 65px
            
            &-name
                margin-top 5px
                
                a
                    color inherit
            
            &-category
                color $grey_500
                
        &-text
            margin 15px 0
            
        &-author
            color $grey_500
            
        a
            text-decoration none