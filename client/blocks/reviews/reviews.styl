.reviews
			
	
	&__item
		padding 15px
		margin-bottom 6px
		white-block-shadow-mixin()
		
		&-company
			margin-bottom 15px
			clearfix()
		
			&-image
				float left
				display block
				width 50px
				height 50px
				background-color $gray-light
				background-size cover
				
			&-data
				margin-left 65px
			
			&-name
				margin 5px 0
			
			&-category
				font-size 12px
				color $gray
				
		&-text
			margin 15px 0
			
		&-author
			font-size 12px
			color $gray
			
		a
			color inherit
			text-decoration none