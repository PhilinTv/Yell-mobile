.scroller
    overflow hidden
    clearfix()
    
    
    &__container
        display table
        min-width 100%
        box-sizing border-box
        
        
    &__content
        display table-cell
        vertical-align top
        
        
    &__spinner
        display none
        vertical-align middle
        padding 0 5px
        text-align center
        
        &.is-visible
            display table-cell