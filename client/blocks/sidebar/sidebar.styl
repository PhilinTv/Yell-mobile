.sidebar
    background-color $white

    &__user
        padding 10px 0
        border-bottom 1px solid $grey_300

        &-item
            display table
            padding 10px 30px
            width 100%
            color inherit
            text-decoration none
            box-sizing border-box
            transition .3s
            
            &:active
                background-color $light

        &-icon
            display table-cell
            vertical-align middle
            width 24px

            .icon
                width 24px
                height 24px
                fill $red_400

        &-content
            display table-cell
            vertical-align middle
            padding-left 20px
            
            h3
                margin 0

            small
                color $grey_500

                
    &__categories
        clearfix()

        .categories__item
            float left
            padding 0
            width 50%

            @media (min-width: 300px)
                width 33.3%

            @media (min-width: 500px)
                width 25%

            @media (min-width: 700px)
                width 20%

            @media (min-width: 900px)
                width 16.6%

            .card
                width auto
                box-shadow none

        &-more
            padding 16px 0
            text-align center

            .button
                border-radius 20px