.tabs
    position relative
    
    &__items
        border-bottom 1px solid $grey_300
        clearfix()
        

    &__item
        float left
        height 18px
        padding 15px 0 11px
        text-transform uppercase
        text-align center
        cursor pointer
        
        
    &__line
        float left
        height 4px
        margin-top -4px
        background-color $red_400
        transition .3s
        
        
    &__content
        clear both
        min-height 100px
        
            
    &__spinner
        absolute left top 44px right bottom
        background-color rgba($white, .7)
        
        .spinner
            absolute left 50% top 50%
            margin -20px 0 0 -20px