.videos
    
    &__item
        float left
        
        &-block
            display block
            padding 35px 16px 16px
            margin 3px
            width 260px
            height 150px
            color $white
            text-decoration none
            background-color $grey_300
            background-size cover
            position relative
            
            &:before
                content ''
                absolute left top right bottom
                background-color rgba($black, .7)
            
        &-icon
            margin-bottom 16px
            display block
            width 50px
            height 50px
            position relative
            opacity .5
            
            .icon
                fill currentColor
            
        &-title
            display block
            height 80px
            position relative
            overflow hidden