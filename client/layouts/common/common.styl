@font-face {
    font-family: 'Helvetica Neue Regular';
    src: url($dir-path + '/fonts/Helvetica-Neue/helveticaneuecyr-roman-webfont.eot');
    src: url($dir-path + '/fonts/Helvetica-Neue/helveticaneuecyr-roman-webfont.eot?#iefix') format('embedded-opentype'),
         url($dir-path + '/fonts/Helvetica-Neue/helveticaneuecyr-roman-webfont.woff2') format('woff2'),
         url($dir-path + '/fonts/Helvetica-Neue/helveticaneuecyr-roman-webfont.woff') format('woff'),
         url($dir-path + '/fonts/Helvetica-Neue/helveticaneuecyr-roman-webfont.ttf') format('truetype'),
         url($dir-path + '/fonts/Helvetica-Neue/helveticaneuecyr-roman-webfont.svg#helveticaneuecyrroman') format('svg');
    font-weight: normal;
    font-style: normal;

}


html, body
    height 100%
    padding 0
    margin 0
    font .95em/1.3 $font-family
    color $grey_700
    background $grey_100
    
    
.common
    &__overlay
        fixed left top right bottom
        opacity 0
        background-color rgba($black, .8)
        transition opacity .3s
        
        &.is-visible
            opacity 1
            
            
small
    font-size .9em
    
    
.is-hidden
    display none
    
.is-overflow-hidden
    overflow hidden
    
.no-tap-highlight-color
    -webkit-tap-highlight-color transparent