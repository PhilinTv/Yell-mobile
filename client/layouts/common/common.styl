html, body
    height 100%
    padding 0
    margin 0
    font .95em/1.3 $font-family
    color $grey_900
    background $grey_100
    
    
h1, h2, h3, h4, h5, h6, p
    margin 16px 0
    font-weight 400
            
            
.whiteframe
    background-color $white
    
    &_z1
        mixin-material-shadow(1)
    &_z2
        mixin-material-shadow(2)
    &_z3
        mixin-material-shadow(3)
    &_z4
        mixin-material-shadow(4)
    &_z5
        mixin-material-shadow(5)
        
        
.padding
    &_16
        padding 16px
        
    &_0x16
        padding 0 16px
        
    &_16x0
        padding 16px 0
        
        
.hr
    height 1px
    width 100%
    background-color $grey_300
    border none
    margin 16px 0
    
    
.is-hidden
    display none
    
.is-overflow-hidden
    overflow hidden
    
.is-align-center
    text-align center
    
.is-uppercase
    text-transform uppercase
    
.no-tap-highlight-color
    -webkit-tap-highlight-color transparent