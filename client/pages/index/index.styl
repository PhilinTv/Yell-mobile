.index
    &__section
        margin 15px 0
        
        &_main
            display table
            width 100%
            min-height 420px
            margin 0
            color $white
            background url($dir-path + '/img/index__section_main.bg.png') 0 0 no-repeat
            background-size cover
                
            .button
                margin-top 80px
                text-transform uppercase
        

        &_events,
        &_reviews
            padding 0 15px
            
        &_guides,
        &_videos,
        &_affiche
            .heading_2
                padding 0 15px
                

    &__search
        display table-cell
        vertical-align bottom
        width 100%
        height 100%
        padding 15px
                

    &__download-app
        position relative
        display block
        text-decoration none
        color $white
        text-align center
        
        &-title
            absolute left top 10% right
            padding 0 30px
        
        img
            width 100%
            margin 0