.index
    &__section
        margin 16px 0
        
        &_main
            display table
            width 100%
            min-height 420px
            margin 0
            color $white
            background url($dir-path + '/img/index__section_main.bg.png') 0 0 no-repeat
            background-size cover
            
            .heading_2
                color inherit
                
            .button
                margin-top 80px
        

        &_padding,
        &_reviews
            padding 0 16px
            
        &_scroller
            h2
                padding 0 16px
                
            .scroller__container
                padding 0 13px
                
            .categories__item,
            .guides__item,
            .videos__item,
            .affiche__item
                display table-cell
                float none
                

    &__search
        display table-cell
        vertical-align bottom
        width 100%
        height 100%
        padding 16px
                

    &__download-app
        position relative
        display block
        max-width 400px
        margin 0 auto
        text-decoration none
        color $white
        text-align center
        
        &-title
            absolute left top 10% right
            padding 0 30px
        
        img
            width 100%
            margin 0