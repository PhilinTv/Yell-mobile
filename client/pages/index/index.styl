.index
    &__section
        margin 15px 0
        
        .heading_2
            color $grey_500
        
        &_main
            display table
            width 100%
            min-height 420px
            margin 0
            color $white
            background url($dir-path + '/img/index__section_main.bg.png') 0 0 no-repeat
            background-size cover
            
            .heading_2
                color inherit
                
            .button
                margin-top 80px
        

        &_events,
        &_reviews
            padding 0 15px
            
        &_categories,
        &_guides,
        &_videos,
        &_affiche
            .heading_2
                padding 0 15px
                
            .scroller__container
                padding 0 12px
                

    &__search
        display table-cell
        vertical-align bottom
        width 100%
        height 100%
        padding 15px
                

    &__download-app
        position relative
        display block
        max-width 400px
        margin 0 auto
        text-decoration none
        color $white
        text-align center
        
        &-title
            absolute left top 10% right
            padding 0 30px
        
        img
            width 100%
            margin 0